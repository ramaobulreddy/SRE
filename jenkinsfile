
pipeline{
     agent any

           stages {
                stage('checkout') {
                   steps {
                         checkout scm
      }
}

                                stage('build') {

                                           steps {
                                                   sh './app.sh'
                                       }
                                     }

                                                              stage ('Test'){
                                                                            steps {
                                                                                   sh 'echo "Test stage passed"'
                                                                               }
                                                                           }
                                                                stage('Deploy') {
                                                                                 steps {
                                                                                     sh 'echo "Deploy simulated on AWS RHEL"'
                                                                          }
                                                                       }
                                                                 }
                                                              }
 

